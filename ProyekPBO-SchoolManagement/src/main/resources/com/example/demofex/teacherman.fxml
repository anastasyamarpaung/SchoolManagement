<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demofex.Controller.TeacherManagement">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Manage Your Teacher" textAlignment="CENTER" wrappingWidth="159.751953125">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Text>
      <HBox alignment="CENTER" prefHeight="23.0" prefWidth="600.0">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#ShowInsertPage" text="Add " textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#ShowDeletePage" text="Delete " textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#ShowUpdatePage" text="Edit" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="5.0" right="5.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#RefreshTable" text="Refresh" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="tabledata" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn prefWidth="75.0" text="ID">
               <cellValueFactory>
                  <PropertyValueFactory property="id" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="240.0" text="NAME">
               <cellValueFactory>
                  <PropertyValueFactory property="name" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="96.0" text="AGE">
               <cellValueFactory>
                  <PropertyValueFactory property="age" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn prefWidth="188.0" text="SUBJECT TEACHED">
               <cellValueFactory>
                  <PropertyValueFactory property="subject" />
               </cellValueFactory>
            </TableColumn>
        </columns>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
